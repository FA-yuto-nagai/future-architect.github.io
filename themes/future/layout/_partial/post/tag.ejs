<% if (post.tags && post.tags.length){ %>
  <% post.tags.forEach(function(tag, i){ %>
    <%
      let displayTagName = tag.name;
      if (displayTagName === "Go") { // Lighthouse対応
        displayTagName = "Go言語";
      }
     %>
    <a href="/<%= tag.path %>" title="<%= tag.name %>タグの記事へ" class="tag-list-link"><%= displayTagName %></a>
  <% }); %>
<% } %>
