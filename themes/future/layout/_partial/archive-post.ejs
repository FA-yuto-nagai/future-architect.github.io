<div class="row article-card">
  <a href="<%- url_for(post.path) %>" title="<%= post.title %>" class="col-sm-4 col-md-4 img_wrap">
    <% if (post.thumbnail) { %>
    <img src="<%= post.thumbnail %>" class="img-responsive" alt="" <%= image_size_attribute(post.thumbnail) %> loading="lazy">
    <% } %>
  </a>
  <% if (post.thumbnail) { %>
  <div class="col-sm-8 col-md-8">
  <% } else { %>
  <div class="col-xs-12">
  <% } %>
    <div class="archive-post-item">
      <a href="<%- url_for(post.path) %>">
        <%- partial('post/title', {class_name: 'archive-post-title'}) %>
        <div class="blog-item">
          <div class="lede">
          <% if (index == true){ %>
          <%- post.lede || post.excerpt || post.content %>
          <% } else { %>
          <%- post.lede || post.excerpt %>
          <% } %>
          </div>
        </div>
      </a>
    </div>
    <ul class="blog-info">
      <li class="blog-info-item"><%- partial('post/date', {class_name: 'archive-article-date', date_format: 'YYYY.MM.DD'}) %></li>
      <li class="blog-info-item"><%- partial('post/tag') %></li>
    </ul>
  </div>
  <div class="col-xs-12 archive-social-button">
  <%- partial('social-button', {post: post, feed:false}) %>
  </div>
</div>
